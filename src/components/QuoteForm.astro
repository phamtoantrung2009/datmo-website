---
const LOCATIONS_URL = "/data/locations.json";
const API_URL =
  "https://dark-hat-f96f.phamtoantrung2009.workers.dev/quote";
---

<form id="quote-form" class="quote-form">
  <h3>Yêu cầu báo giá thuê xe</h3>

  <!-- Điểm đi / đến -->
  <div class="row">
    <select name="from" id="from" required>
      <option value="">Điểm đón</option>
    </select>

    <select name="to" id="to" required>
      <option value="">Điểm đến</option>
    </select>
  </div>

  <!-- Ngày -->
  <div class="row">
    <input type="date" name="start_date" required />
    <input type="date" name="end_date" />
  </div>

  <!-- Xe + SĐT -->
  <div class="row">
    <select name="vehicle">
      <option value="">Loại xe</option>
      <option>16 chỗ</option>
      <option>29 chỗ</option>
      <option>35 chỗ</option>
      <option>45 chỗ</option>
    </select>

    <input
      type="tel"
      name="phone"
      placeholder="Số điện thoại"
      required
    />
  </div>

  <button type="submit">Yêu cầu báo giá</button>
  <p id="quote-status" class="status"></p>
</form>

<script>
  const form = document.getElementById("quote-form");
  const status = document.getElementById("quote-status");
  const fromSelect = document.getElementById("from");
  const toSelect = document.getElementById("to");

  // Load locations
  fetch("/data/locations.json")
    .then((r) => r.json())
    .then((data) => {
      Object.entries(data).forEach(([province, districts]) => {
        districts.forEach((d) => {
          const value = `${d}, ${province}`;
          fromSelect.add(new Option(value, value));
          toSelect.add(new Option(value, value));
        });
      });
    });

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    status.textContent = "Đang gửi yêu cầu...";

    const payload = Object.fromEntries(new FormData(form).entries());

    try {
      const res = await fetch(
        "https://dark-hat-f96f.phamtoantrung2009.workers.dev/quote",
        {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload),
        }
      );

      const data = await res.json();

      if (data.success) {
        status.textContent = "✅ Gửi yêu cầu thành công!";
        form.reset();
      } else {
        status.textContent = "❌ " + (data.error || "Có lỗi xảy ra");
      }
    } catch (err) {
      status.textContent = "❌ Không kết nối được máy chủ";
    }
  });
</script>

<style>
  .quote-form {
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    max-width: 720px;
    margin: auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  }

  .quote-form h3 {
    margin-bottom: 16px;
  }

  .row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-bottom: 12px;
  }

  input,
  select {
    padding: 10px;
    border-radius: 8px;
    border: 1px solid #ddd;
    font-size: 14px;
  }

  button {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 10px;
    background: #ff7a00;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
  }

  button:hover {
    background: #e56f00;
  }

  .status {
    margin-top: 10px;
    font-size: 14px;
  }

  @media (max-width: 640px) {
    .row {
      grid-template-columns: 1fr;
    }
  }
</style>
