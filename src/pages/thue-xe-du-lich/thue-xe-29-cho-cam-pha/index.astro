---
import BaseLayout from '../../../layouts/BaseLayout.astro';



import { getOgImage } from '../../../config/og';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import FAQ from '../../../components/FAQ.astro';
import JsonLd from '../../../components/JsonLd.astro';
import CallToActions from '../../../components/CallToActions.astro';
import { SITE } from '../../../config/site';
import QuoteForm from '../../../components/QuoteForm.astro';

// SEO: tune title/description length for SERP.
const title = 'Thuê xe du lịch 29 chỗ Cẩm Phả, Quảng Ninh | Datmo';
const description = 'Xe 29 chỗ phù hợp nhóm công ty, đoàn gia đình; nhận tuyến Hạ Long, Vân Đồn/Ao Tiên, Móng Cái, Nội Bài. Báo giá nhanh, hỗ trợ lịch trình và tuyến phù hợp.';
const ogImage = getOgImage('/thue-xe-du-lich/thue-xe-29-cho-cam-pha/');
const canonical = SITE.url + '/thue-xe-du-lich/thue-xe-29-cho-cam-pha/';

const crumbs = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Thuê xe du lịch', href: '/thue-xe-du-lich/' },
  { name: 'Thuê xe 29 chỗ tại Cẩm Phả', href: '/thue-xe-du-lich/thue-xe-29-cho-cam-pha/' },
];

const faqItems = [
  { q: 'Cần đặt xe trước bao lâu?', a: 'Nên đặt trước 1–3 ngày; cuối tuần/lễ nên đặt sớm hơn để giữ lịch.' },
  { q: 'Có hỗ trợ đi cảng/tàu không?', a: 'Có. Bạn có thể đặt xe đi Ao Tiên/Vũng Đục để kịp giờ tàu.' },
];

const serviceJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Thuê xe 29 chỗ tại Cẩm Phả',
  areaServed: ['Cẩm Phả', 'Quảng Ninh'],
  provider: { '@type': 'LocalBusiness', name: SITE.name, url: SITE.url, telephone: SITE.phone },
  url: canonical,
};
---

<BaseLayout title={title} description={description} ogImage={ogImage} canonical={canonical}>
  <Breadcrumbs items={crumbs} />

  <header class="container section">
    <h1>Thuê xe 29 chỗ tại Cẩm Phả</h1>
    <p class="lead">Dịch vụ phù hợp nhóm đi theo tuyến, theo ngày hoặc theo lịch trình tour. Báo giá nhanh qua hotline/Zalo.</p>
<section class="container section">
    <QuoteForm />
  </section>
    <div class="btn-row">
      <a class="btn primary" href="/lien-he/">Đặt dịch vụ</a>
      <a class="btn" href="/tour-du-lich/tour-doan/">Tour đoàn</a><a class="btn" href="/lien-he/">Nhận báo giá</a>
    </div>
  </header>

  <section class="container section">
    <h2>Tuyến phổ biến</h2>
    <ul>
      <li>Cẩm Phả ↔ Hạ Long</li>
      <li>Cẩm Phả ↔ Vân Đồn/Ao Tiên (đi tàu ra đảo)</li>
      <li>Cẩm Phả ↔ Nội Bài (đưa đón sân bay)</li>
    </ul>
  </section>

  <FAQ items={faqItems} />
  <JsonLd data={serviceJsonLd} />
  <CallToActions />
</BaseLayout>
