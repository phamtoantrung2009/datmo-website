---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getOgImage } from '../config/og';
import QuoteForm from '../components/QuoteForm.astro';

const title = 'Test báo giá thuê xe | Datmo';
const description = 'Trang thử nghiệm form báo giá thuê xe của Datmo.';
const ogImage = getOgImage('/test-quote/');
---
<BaseLayout title={title} description={description} ogImage={ogImage}>
  <section class="container section">
    <h1>Test form báo giá</h1>
    <p class="lead">Trang thử nghiệm nội bộ cho form báo giá thuê xe.</p>
    <QuoteForm />
  </section>
</BaseLayout>
