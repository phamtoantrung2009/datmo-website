---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import FAQ from '../../../components/FAQ.astro';
import JsonLd from '../../../components/JsonLd.astro';
import CallToActions from '../../../components/CallToActions.astro';
import { SITE } from '../../../config/site';

const title = 'Vé tàu cao tốc Vũng Đục ↔ Cô Tô | Datmo';
const description = 'Tư vấn/đặt vé tàu cao tốc tuyến Vũng Đục ↔ Cô Tô (tuỳ lịch khai thác). Hỗ trợ kiểm tra lịch, thời tiết và phương án di chuyển.';
const canonical = SITE.url + '/ve-tau-cao-toc/vung-duc-co-to/';

const crumbs = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Vé tàu cao tốc', href: '/ve-tau-cao-toc/' },
  { name: 'Vé tàu cao tốc Vũng Đục ↔ Cô Tô', href: '/ve-tau-cao-toc/vung-duc-co-to/' },
];

const faqItems = [
  { q: 'Lịch tàu tuyến này xem ở đâu?', a: 'Bạn nên nhắn Zalo/Hotline để xác nhận lịch chạy theo ngày và thời tiết.' },
  { q: 'Có hỗ trợ xe đi cảng không?', a: 'Có thể kết hợp thuê xe từ Cẩm Phả đi cảng để kịp giờ tàu.' },
];

const serviceJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Vé tàu cao tốc Vũng Đục ↔ Cô Tô',
  areaServed: ['Cẩm Phả', 'Quảng Ninh'],
  provider: { '@type': 'LocalBusiness', name: SITE.name, url: SITE.url, telephone: SITE.phone },
  url: canonical,
};
---
<BaseLayout title={title} description={description} canonical={canonical}>
  <Breadcrumbs items={crumbs} />

  <section class="container section">
    <h1>Vé tàu cao tốc Vũng Đục ↔ Cô Tô</h1>
    <p class="lead">Tư vấn/đặt vé tàu cao tốc tuyến Vũng Đục ↔ Cô Tô (tuỳ lịch khai thác). Hỗ trợ kiểm tra lịch, thời tiết và phương án di chuyển.</p>

    <div class="card">
      <h2>Lưu ý quan trọng</h2>
      <ul>
        <li>Có mặt trước giờ tàu chạy 30–45 phút</li>
        <li>Mang giấy tờ tuỳ thân theo quy định</li>
        <li>Lịch tàu có thể thay đổi do thời tiết</li>
      </ul>
      <p class="small">Xem thêm: <a href="/blog/lich-tau-gia-ve/">Blog lịch tàu & giá vé</a> • <a href="/thue-xe-du-lich/">Thuê xe đi cảng</a></p>
    </div>
  </section>

  <FAQ items={faqItems} />
  <JsonLd data={serviceJsonLd} />
  <CallToActions />
</BaseLayout>
