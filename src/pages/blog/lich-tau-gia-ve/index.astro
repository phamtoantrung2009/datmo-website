---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

// SEO: tune title/description length for SERP.
const title = 'Lịch tàu & giá vé Ao Tiên, Vũng Đục Cẩm Phả | Blog Datmo';
const description = 'Cập nhật lịch tàu cao tốc, giá vé Ao Tiên – Cô Tô, Ao Tiên – Quan Lạn; kèm lưu ý đặt vé, giờ chạy theo ngày và tình hình thời tiết, thủ tục.';
const crumbs = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Blog', href: '/blog/' },
  { name: 'Lịch tàu & giá vé', href: '/blog/lich-tau-gia-ve/' },
];

const posts = (await getCollection('blog', ({ data }) => !data.draft && data.category === 'lich-tau-gia-ve'))
  .sort((a, b) => +new Date(b.data.publishedAt) - +new Date(a.data.publishedAt));
---
<BaseLayout title={title} description={description}>
  <Breadcrumbs items={crumbs} />
  <section class="container section">
    <h1>Lịch tàu & giá vé</h1>
    <p class="lead">Bài viết tập trung thông tin lịch tàu/giá vé và lưu ý đặt vé.</p>
    <div class="grid-2">
      {posts.map((p) => (
        <a class="card post-card" href={`/blog/${p.slug}/`}>
          <h3>{p.data.title}</h3>
          <div class="blog-meta">{new Date(p.data.publishedAt).toLocaleDateString('vi-VN')}</div>
          <p class="small">{p.data.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
