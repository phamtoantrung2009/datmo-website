---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getOgImage } from '../../../config/og';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

// SEO: tune title/description length for SERP.
const title = 'Blog vé tàu cao tốc Cô Tô, Quan Lạn | Datmo';
const description = 'Lịch tàu cao tốc, giá vé, kinh nghiệm đặt vé sớm cho tuyến Ao Tiên – Cô Tô, Ao Tiên – Quan Lạn; cập nhật theo mùa, kèm tips hữu ích khi đi tàu.';
const ogImage = getOgImage('/blog/ve-tau-cao-toc/');
const crumbs = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Blog', href: '/blog/' },
  { name: 'Vé tàu cao tốc', href: '/blog/ve-tau-cao-toc/' },
];

const posts = (await getCollection('blog', ({ data }) => !data.draft && data.category === 've-tau-cao-toc'))
  .sort((a, b) => +new Date(b.data.publishedAt) - +new Date(a.data.publishedAt));
---
<BaseLayout title={title} description={description} ogImage={ogImage}>
  <Breadcrumbs items={crumbs} />
  <section class="container section">
    <h1>Vé tàu cao tốc</h1>
    <p class="lead">Lịch tàu, giá vé & kinh nghiệm đi tàu cao tốc Cô Tô, Quan Lạn.</p>
    <div class="grid-2">
      {posts.map((p) => (
        <a class="card post-card" href={`/blog/${p.slug}/`}>
          <h3>{p.data.title}</h3>
          <div class="blog-meta">{new Date(p.data.publishedAt).toLocaleDateString('vi-VN')}</div>
          <p class="small">{p.data.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
