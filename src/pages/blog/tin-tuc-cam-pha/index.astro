---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

const title = 'Tin tức Cẩm Phả | Blog Datmo';
const description = 'Tin tức địa phương, điểm đến, cập nhật hữu ích cho khách tại Cẩm Phả – Quảng Ninh.';
const crumbs = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Blog', href: '/blog/' },
  { name: 'Tin tức Cẩm Phả', href: '/blog/tin-tuc-cam-pha/' },
];

const posts = (await getCollection('blog', ({ data }) => !data.draft && data.category === 'tin-tuc-cam-pha'))
  .sort((a, b) => +new Date(b.data.publishedAt) - +new Date(a.data.publishedAt));
---
<BaseLayout title={title} description={description}>
  <Breadcrumbs items={crumbs} />
  <section class="container section">
    <h1>Tin tức Cẩm Phả</h1>
    <p class="lead">Cập nhật điểm đến, sự kiện, thông tin di chuyển.</p>
    <div class="grid-2">
      {posts.map((p) => (
        <a class="card post-card" href={`/blog/${p.slug}/`}>
          <h3>{p.data.title}</h3>
          <div class="blog-meta">{new Date(p.data.publishedAt).toLocaleDateString('vi-VN')}</div>
          <p class="small">{p.data.description}</p>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
