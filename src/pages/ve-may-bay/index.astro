---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getOgImage } from '../../config/og';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import FAQ from '../../components/FAQ.astro';
import JsonLd from '../../components/JsonLd.astro';
import CallToActions from '../../components/CallToActions.astro';
import { SITE } from '../../config/site';

// SEO: tune title/description length for SERP.
const title = 'Đặt vé máy bay nhanh tại Cẩm Phả, Quảng Ninh | Datmo';
const description = 'Nhận đặt vé máy bay cho khách Cẩm Phả – Quảng Ninh: tư vấn hành trình, báo giá nhanh, hỗ trợ đổi vé theo điều kiện hãng. Hỗ trợ nhanh qua hotline.';
const ogImage = getOgImage('/ve-may-bay/');
const canonical = SITE.url + '/ve-may-bay/';

const crumbs = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Đặt vé máy bay tại Cẩm Phả', href: '/ve-may-bay/' },
];

const faqItems = [
  { q: 'Cần cung cấp thông tin gì để đặt nhanh?', a: 'Họ tên, ngày đi (khứ hồi nếu có), tuyến/điểm đến và số điện thoại liên hệ.' },
  { q: 'Có hỗ trợ thay đổi/hoàn huỷ không?', a: 'Tuỳ điều kiện của hãng/nhà cung cấp. Datmo hỗ trợ hướng dẫn và xử lý theo quy định.' },
];

const serviceJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Đặt vé máy bay tại Cẩm Phả',
  areaServed: ['Cẩm Phả', 'Quảng Ninh'],
  provider: { '@type': 'LocalBusiness', name: SITE.name, url: SITE.url, telephone: SITE.phone },
  url: canonical,
};
---
<BaseLayout title={title} description={description} ogImage={ogImage} canonical={canonical}>
  <Breadcrumbs items={crumbs} />
  <section class="container section">
    <h1>Đặt vé máy bay tại Cẩm Phả</h1>
    <p class="lead">Nhận đặt vé máy bay cho khách tại Cẩm Phả – Quảng Ninh: tư vấn hành trình, báo giá nhanh, hỗ trợ đổi vé theo điều kiện hãng.</p>

    <div class="card">
      <h2>Liên kết cùng SILO</h2>
      <ul class="link-list">
        <li><a href="/khach-san/">Đặt phòng khách sạn</a></li><li><a href="/tour-du-lich/">Tour du lịch</a></li><li><a href="/visa-ho-chieu/">Visa – hộ chiếu</a></li>
      </ul>
    </div>
  </section>

  <FAQ items={faqItems} />
  <JsonLd data={serviceJsonLd} />
  <CallToActions />
</BaseLayout>
