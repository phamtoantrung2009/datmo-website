---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import FAQ from '../../../components/FAQ.astro';
import JsonLd from '../../../components/JsonLd.astro';
import CallToActions from '../../../components/CallToActions.astro';
import { SITE } from '../../../config/site';

const title = 'Tour nội địa xuất phát từ Cẩm Phả | Datmo';
const description = 'Tư vấn tour trong nước cho khách Cẩm Phả: lịch trình linh hoạt, phù hợp gia đình/công ty, có thể kết hợp thuê xe và đặt khách sạn.';
const canonical = SITE.url + '/tour-du-lich/tour-noi-dia/';

const crumbs = [
  { name: 'Trang chủ', href: '/' },
  { name: 'Tour du lịch', href: '/tour-du-lich/' },
  { name: 'Tour nội địa xuất phát từ Cẩm Phả', href: '/tour-du-lich/tour-noi-dia/' },
];

const faqItems = [
  { q: 'Cần cung cấp thông tin gì để báo giá tour?', a: 'Ngày đi, số khách, điểm đến mong muốn, mức ngân sách và yêu cầu khách sạn/di chuyển.' },
  { q: 'Có hỗ trợ đưa đón từ Cẩm Phả không?', a: 'Có. Có thể kết hợp thuê xe 16–45 chỗ theo đoàn.' },
];

const serviceJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Tour nội địa xuất phát từ Cẩm Phả',
  areaServed: ['Cẩm Phả', 'Quảng Ninh'],
  provider: { '@type': 'LocalBusiness', name: SITE.name, url: SITE.url, telephone: SITE.phone },
  url: canonical,
};
---
<BaseLayout title={title} description={description} canonical={canonical}>
  <Breadcrumbs items={crumbs} />
  <section class="container section">
    <h1>Tour nội địa xuất phát từ Cẩm Phả</h1>
    <p class="lead">Tư vấn tour trong nước cho khách Cẩm Phả: lịch trình linh hoạt, phù hợp gia đình/công ty, có thể kết hợp thuê xe và đặt khách sạn.</p>

    <div class="card">
      <h2>Gợi ý gói dịch vụ</h2>
      <ul>
        <li>Lịch trình linh hoạt theo ngày</li>
        <li>Kết hợp vé máy bay/khách sạn khi cần</li>
        <li>Hỗ trợ xe đưa đón và vé tàu (nếu đi đảo)</li>
      </ul>
      <p class="small">Xem thêm: <a href="/thue-xe-du-lich/">Thuê xe</a> • <a href="/ve-may-bay/">Vé máy bay</a> • <a href="/khach-san/">Khách sạn</a></p>
    </div>
  </section>

  <FAQ items={faqItems} />
  <JsonLd data={serviceJsonLd} />
  <CallToActions />
</BaseLayout>
